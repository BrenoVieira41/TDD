{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "esModuleInterop": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist",
      "target": "es2017",
      "sourceMap": true,
      "baseUrl": "./",
      "incremental": true
    },
    "exclude": [
      "./jest.config.ts",
      "./node_modules",
      "./tests",
      "./build"
    ]
  }
